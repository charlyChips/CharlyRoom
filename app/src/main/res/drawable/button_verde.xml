<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="315"
                android:endColor="@color/color.verde.1"
                android:startColor="@color/color.verde.2" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <gradient
                android:angle="90"
                android:endColor="@color/color.verde.3"
                android:centerColor="@color/color.verde.4"
                android:startColor="@color/color.verde.4" />
        </shape>
    </item>

    <item
        android:height="24dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="-90"
                android:endColor="@color/color.verde.3"
                android:startColor="@color/color.verde.1" />
        </shape>
    </item>
    <item
        android:width="10dp"
        android:height="8dp"
        android:left="6dp"
        android:top="6dp">
        <shape android:shape="oval">
            <corners android:radius="8dp" />
            <solid android:color="@color/color.verde.0" />
        </shape>
    </item>

</layer-list>


